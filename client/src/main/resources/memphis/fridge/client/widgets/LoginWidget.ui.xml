<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .login {
            position: relative;
            margin: 1ex 0.5ex;
            border: solid 1px #777;
            padding: 1ex 0.5ex;
            text-align: center;
        }

        .label {
            position: absolute;
            left: 1em;
            top: 1px;
            margin-top: -1ex;
            padding: 0 1px;
            background-color: #f5f5f5;
        }

        .login h1 {
            font-size: 42px;
            margin: 0;
            padding: 0.5ex 0;
        }

        .login table {
            margin: 0 auto;
            width: 16em;
        }

        .login input {
            font-size: 120%;
            margin: 0.2em 0.5em;
            width: 8em;
        }
    </ui:style>
    <g:RenderablePanel styleName="{style.login}">
        <div class="{style.label}">Login</div>
        <h1>Welcome to Fridge</h1>
        <table>
            <tr>
                <td>
                    <g:Label>Username:</g:Label>
                    <g:TextBox ui:field="username"></g:TextBox>
                </td>
                <td>
                    <g:Label>Password:</g:Label>
                    <g:PasswordTextBox ui:field="password"></g:PasswordTextBox>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <g:Label ui:field="message">Enter username and password, then press enter</g:Label>
                </td>
            </tr>
        </table>
    </g:RenderablePanel>
</ui:UiBinder>