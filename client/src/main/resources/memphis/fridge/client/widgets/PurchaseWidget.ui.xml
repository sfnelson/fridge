<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.google.gwt.user.cellview.client'
        >
    <ui:style type="memphis.fridge.client.widgets.PurchaseWidget.Style">
        .purchase {
            position: relative;
            margin: 2em 0;
        }

        .purchase table {
            margin: 0 auto;
            margin-top: 2em;
            width: 16em;
            text-align: center;
        }

        .purchase input {
            width: 6em;
            margin: 0 0.5em;
        }

        .purchase label {
            color: #aaa;
            -webkit-transition: color linear .2s;
        }

        .purchase .hasFocus label {
            color: black;
        }

        .amount {
            text-align: right;
        }

        .info {
        }

        .cart {
            margin: 1em auto;
            width: 20em;
        }
    </ui:style>
    <g:RenderablePanel styleName="{style.purchase}">
        <table>
            <tr>
                <td>
                    <label>product</label>
                    <g:TextBox ui:field="product"/>
                </td>
                <td>
                    <label>amount</label>
                    <g:TextBox ui:field="amount" styleName="{style.amount}"/>
                </td>
                <td>
                    <label>&nbsp;</label>
                    <g:Button ui:field="add">Add</g:Button>
                </td>
            </tr>
        </table>
        <div class="{style.info}">
            <g:Label ui:field="name"></g:Label>
            <g:Label ui:field="type"></g:Label>
            <g:Label ui:field="balance"></g:Label>
            <g:Label ui:field="total"></g:Label>
        </div>
        <c:CellList ui:field="cart" styleName="{style.cart}"></c:CellList>
    </g:RenderablePanel>
</ui:UiBinder>